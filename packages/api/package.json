{
  "name": "@bubble-ai/api",
  "version": "1.0.0",
  "description": "REST API for Bubble AI services - taxonomy, classification, and more",
  "type": "module",
  "main": "src/worker.ts",
  "scripts": {
    "dev": "dotenv -e ../../.env -- tsx --watch src/server.ts",
    "wrangler": "wrangler dev",
    "deploy": "wrangler deploy --env production",
    "deploy:staging": "wrangler deploy --env staging",
    "tail": "wrangler tail",
    "test": "vitest",
    "test:run": "vitest run",
    "typecheck": "tsc --noEmit",
    "lint": "echo 'Run lint from root'",
    "lint:fix": "echo 'Run lint:fix from root'"
  },
  "keywords": [
    "api",
    "taxonomy",
    "classifier",
    "cloudflare-workers"
  ],
  "author": "Bubble Goods",
  "license": "MIT",
  "dependencies": {
    "@bubble-ai/classifier": "*",
    "@bubble-ai/taxonomy": "*",
    "@hono/node-server": "^1.13.0",
    "@hono/zod-openapi": "^0.18.0",
    "@scalar/hono-api-reference": "^0.5.0",
    "hono": "^4.6.0",
    "zod": "^3.24.0"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20241218.0",
    "@types/node": "^24.10.2",
    "dotenv": "^16.4.0",
    "dotenv-cli": "^11.0.0",
    "tsx": "^4.19.0",
    "typescript": "^5.9.3",
    "vitest": "^3.2.4",
    "wrangler": "^3.99.0"
  }
}
