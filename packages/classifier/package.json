{
  "name": "@bubble-ai/classifier",
  "version": "1.0.0",
  "description": "Shopify product taxonomy classifier using embeddings and LLM",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "data",
    "prompts"
  ],
  "scripts": {
    "build": "tsc",
    "test": "vitest",
    "test:run": "vitest run",
    "typecheck": "tsc --noEmit",
    "lint": "echo 'Run lint from root'",
    "lint:fix": "echo 'Run lint:fix from root'",
    "dev": "wrangler dev",
    "deploy": "wrangler deploy",
    "deploy:staging": "wrangler deploy --env staging",
    "tail": "wrangler tail",
    "calibrate": "tsx scripts/calibrate.ts",
    "calibrate:offline": "tsx scripts/calibrate.ts --offline"
  },
  "keywords": [
    "shopify",
    "taxonomy",
    "classifier",
    "categorization",
    "llm",
    "cloudflare-workers"
  ],
  "author": "Bubble Goods",
  "license": "MIT",
  "dependencies": {
    "@anthropic-ai/sdk": "^0.39.0",
    "@bubble-ai/taxonomy": "*",
    "hono": "^4.6.0",
    "openai": "^6.10.0",
    "zod": "^3.24.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.8",
    "@cloudflare/workers-types": "^4.20241218.0",
    "@supabase/supabase-js": "^2.47.0",
    "@types/node": "^24.10.2",
    "dotenv": "^16.4.0",
    "tsx": "^4.19.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.15",
    "wrangler": "^3.99.0"
  }
}
